{
  "name": "pantra",
  "version": "0.1.1b",
  "description": "Kitchen food stock manager",
  "author": "Charles Stello",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "axios": "^1.4.0",
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router": "^6.11.2",
    "react-router-dom": "^6.11.2",
    "react-scripts": "5.0.1",
    "react-select": "^5.7.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "dev": "concurrently -k \"set BROWSER=none&&npm start\" \"npm run electron\"",
    "electron": "wait-on tcp:127.0.0.1:3000 && electron .",
    "package": "react-scripts build && electron-builder",
    "make": "react-scripts build && electron-builder",
    "make-all": "react-scripts build && electron-builder"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "electron": "^25.0.1",
    "electron-builder": "^24.4.0",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.syntaxiscs.pantra",
    "productName": "Pantra",
    "directories": {
      "output": "out"
    },
    "files": [
      "**/*",
      "!node_modules/*/*",
      "!src/*",
      "!public/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "./public/Assets/Images/favicon.ico",
      "publisherName": "Charles Stello"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "rpm"
    },
    "nsis": {
      "oneClick": false,
      "license": "LICENSE.txt",
      "allowToChangeInstallationDirectory": true
    }
  }
}
